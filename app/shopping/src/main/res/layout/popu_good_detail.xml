<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWtah"
    android:padding="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_200">

    <ImageView
        android:id="@+id/good_detail_img"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"/>
    <TextView
        android:id="@+id/good_detail_price"
        android:text="价格：￥599"
        android:textStyle="bold"
        android:textSize="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/good_detail_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/good_detail_specification"
        android:text="已选择： 请选择城规数量"
        android:layout_below="@id/good_detail_price"
        android:textStyle="bold"
        android:textSize="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/good_detail_img"/>
    <ImageView
        android:id="@+id/good_detail_cancel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/ic_arrow_rt"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:layout_below="@id/good_detail_img"
        android:layout_marginTop="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_num"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/tv_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/dp_16"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="2"
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_less"
            android:text="1"
            android:textSize="@dimen/dp_16"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_pius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_number"
            android:text="+"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dp_16"/>

    </LinearLayout>

</RelativeLayout>